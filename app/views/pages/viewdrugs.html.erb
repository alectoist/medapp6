<div id="admin-viewdrugs-wrap">

<table>
<thead>
<tr>
<th>Name</th>
<th>Description</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% Drug.all.each do |drug| %>
<tr>
<td><%= drug.name %></td>
<td><%= drug.description %></td>
<td><%= link_to 'Show', drug %></td>
<td><%= link_to 'Edit', edit_drug_path(drug) %></td>
<td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>

</div>