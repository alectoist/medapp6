
<div class="search-wrap inner-addon right-addon">
	<h1>Search Meds</h1>
	<%= form_tag drugs_path, :method => :get do %>
	<%= text_field_tag :search, params[:search], :class => "typeahead form-control" %>
	<%= button_tag(type: "submit", class: "btn btn-default search-button") do %>
    <i class="glyphicon glyphicon-search"></i>
	<% end %>
	<% end %>
</div>

