<div class="topbar-wrap">
  <nav class="nav" style="position: absolute; right: 0px;">
    <ul>
      <li><%= link_to "FAQ", faq_path %></li>
      <li><%= link_to "Help", help_path %></li>
    </ul>
  </nav>

  <div class="search-wrap-drugs inner-addon right-addon">
  <%= form_tag drugs_path, :method => :get do %>
  <%= text_field_tag :search, params[:search], :class => "typeahead form-control" %>
  <%= button_tag(type: "submit", class: "btn btn-default search-button-drugs") do %>
    <i class="glyphicon glyphicon-search"></i>
  <% end %>
  <% end %>
</div>

</div>

<p>
  <strong>Name:</strong>
  <%= @drug.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @drug.description %>
</p>

<% @ingredients.each do |ingredient| %>
	<span><%= ingredient.name %>, </span>
<% end %>
<br><br><br>
<p>Has ingredients:</p>
<% Relationship.where(drug_id: @drug.id).each do |relationship| %>
 <%= Ingredient.find_by(id: relationship.ingredient_id ).name %> 
<% end %>
<br>
<br>
<%= link_to 'Edit', edit_drug_path(@drug) %> |
<%= link_to 'Back', drugs_path %>
